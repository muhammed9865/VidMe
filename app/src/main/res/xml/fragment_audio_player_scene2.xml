<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet />
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="bottom" />

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/guideline19"
            motion:layout_constraintEnd_toStartOf="@+id/guideline21"
            motion:layout_constraintStart_toStartOf="@+id/guideline20"
            motion:layout_constraintTop_toTopOf="@+id/guideline22" />
        <Constraint
            android:id="@+id/audio_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="-10dp"
            motion:layout_constraintBottom_toTopOf="@+id/audio_progress_seekbar"
            motion:layout_constraintEnd_toStartOf="@+id/guideline21"
            motion:layout_constraintStart_toStartOf="@+id/guideline20" />
        <Constraint
            android:id="@+id/audio_progress_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/guideline21"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="@+id/guideline20"
            motion:layout_constraintTop_toTopOf="@+id/guideline23" />
        <Constraint
            android:id="@+id/audio_current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="-10dp"
            motion:layout_constraintStart_toStartOf="@+id/guideline20"
            motion:layout_constraintTop_toBottomOf="@+id/audio_progress_seekbar" />
        <Constraint
            android:id="@+id/audio_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="@dimen/_5sdp"
            motion:layout_constraintEnd_toStartOf="@+id/guideline21"
            motion:layout_constraintTop_toBottomOf="@+id/audio_progress_seekbar" />
        <Constraint
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/btn_play_pause"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="@+id/guideline20"
            motion:layout_constraintTop_toBottomOf="@+id/audio_progress_seekbar" />
        <Constraint
            android:id="@+id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_prev"
            motion:layout_constraintEnd_toStartOf="@+id/btn_next"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@+id/btn_prev"
            motion:layout_constraintTop_toTopOf="@+id/btn_prev" />
        <Constraint
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
            motion:layout_constraintEnd_toStartOf="@+id/guideline21"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@+id/btn_play_pause"
            motion:layout_constraintTop_toTopOf="@+id/btn_play_pause" />

        <Constraint
            android:id="@+id/audio_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/cardView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent" />
        <Constraint
            android:id="@+id/audio_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/btn_play_pause"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@id/cardView"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_prev"
            motion:layout_constraintEnd_toStartOf="@+id/btn_next"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@+id/btn_prev"
            motion:layout_constraintTop_toTopOf="@+id/btn_prev" />
        <Constraint
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
            motion:layout_constraintEnd_toStartOf="@+id/guideline21"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@+id/btn_play_pause"
            motion:layout_constraintTop_toTopOf="@+id/btn_play_pause" />
    </ConstraintSet>
</MotionScene>